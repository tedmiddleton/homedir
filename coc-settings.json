{
    "languageserver": {
        "rust": {
            "command": "rls",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": [
                "build/"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        },
        "clangd" : {
          "command": "clangd",
          "rootPatterns": ["compile_commands.json", ".git/", ".hg/"],
          "filetypes": ["c", "cpp", "objc", "objcpp"]
        }
    }
}
